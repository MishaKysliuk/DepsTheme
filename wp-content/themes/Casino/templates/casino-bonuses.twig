{% extends "templates/base.twig" %}

{% block content %}

<main class="main">

	<div class="block-wrapper xs-tac pt-2 pb-2 md-pv-4" style="background-color:{{ header_color }}">
		<div class="container">
			<div class="top-content-row  top-content-row--justify">
				<div class="top-content-row__el">
					<h1 class="h1 xs-tac">{{ fn('do_shortcode', title) }}</h1>
					{% include '/templates/parts/page-info.twig' with {'additional_class': 'page-info--border'} %}

					<div class="img-wrap-mobail"><img src="{{ Image(image).src }}" width="{{ term.meta('image_width') ? term.meta('image_width') : post.meta('image_width') }}" height="{{ term.meta('image_height') ? term.meta('image_height') : post.meta('image_height') }}"  alt="bg"></div>
					<div class="white-text taj mt-1">{{ fn('do_shortcode', descriptions) }}</div>
						{% if list %}
							<ul class="arrow-list mt-2">
								{% for item in list %}
									<li class="arrow-list__item">
										<p class="white-text">{{ fn('do_shortcode', item.item) }}</p>
									</li>
								{% endfor %}
							</ul>
						{% endif %}
					</div>
					<div class="top-content-row__el top-content-row__el--xs-d-none-xl">
						<div class="img-wrap"><img src="{{ Image(image).src }}" width="{{ term.meta('image_width') ? term.meta('image_width') : post.meta('image_width') }}" height="{{ term.meta('image_height') ? term.meta('image_height') : post.meta('image_height') }}"  alt="bg"></div>
					</div>
			</div>
		</div>
	</div>

	
	<div class="block-wrapper pv-2 lg-pt-4 lg-pb-3" id='filters'>
		<div class="container">
			<h2 id="bonuses_filtres_title" class="h2 tac mb-2">{{ fn('do_shortcode', bonuses_filtres_title) }}</h2>
			<bonuses-filter 
				:filters-data="{{ filters_list|e }}" 
				:active-filters="{{ active_filters|e }}" 
				pagination="{{ pagination }}"
			>
				<template #default="">
					<div class="custom-row-flex">
						{% for bonus in bonuses %}
							<div class="custom-row-flex__el custom-row-flex__el--col-sm-12 custom-row-flex__el--col-md-6 custom-row-flex__el--col-lg-4">
								{% include 'templates/parts/bonus-card.twig' %}
							</div>
						{% endfor %}
					</div>
				</template>
			</bonuses-filter>
		</div>
	</div>

	{% include '/templates/parts/additional-blocks.twig' %}

</main>

{% endblock %}