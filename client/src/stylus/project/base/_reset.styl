*,
*::after,
*::before
  margin: 0
  padding: 0
  box-sizing: inherit

html
  height 100%
  overflow-x: hidden
  font-size 10px


body
  height 100%
  font-family 'Arial'
  font-weight 400
  margin 0px
  padding 0px
  box-sizing border-box
  font-size 1.6rem
  line-height 1.3
  +md()
    line-height 1.4

.page-content
  min-height: 100%
  display flex
  flex-direction: column
  align-items stretch

main
  flex-grow: 1

.main--flex-column
  display flex
  flex-direction: column

header, main, footer
  flex-shrink: 0


html, body
  &.active
    overflow hidden
    height 100vh
    touch-action none

a, button
  outline: none

a
  text-decoration none

button
  font-family: inherit

textarea
  resize none
  overflow-x hidden
  overflow-y: auto
  font-family inherit

ul
  list-style-type none


.img-wrap
  height 100%
  overflow hidden
  display flex
  align-items baseline
  img,picture
    display block
    max-width: 100%
    margin auto
    object-fit: contain

.img-wrap-mobail
  display: block
  margin-top: 20px
  +xl()
    display none
  img
    width 100%
    object-fit: contain


.img-response
  height 100%
  position relative
  overflow hidden
  img
    position absolute
    display block
    max-width 100%
    min-width 100%
    height 100%
    transform: translate(-50%, -50%)
    top 50%
    left 50%


.visually-hidden
  position: absolute

  width: 1px
  height: 1px
  margin: -1px
  padding: 0
  border: 0

  white-space: nowrap

  clip-path: inset(100%)
  clip: rect(0 0 0 0)
  overflow: hidden
