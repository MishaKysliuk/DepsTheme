.contact-info
  display flex
  justify-content center
  flex-direction column
  +md()
    flex-direction row
    
  &__
    &item
      margin 0 28px
      display flex
      align-items center
      flex-direction column
      margin-bottom 40px
      +md()
        margin-bottom 0
        flex-direction row
    &icon
      margin 0 14px
      height 45px
      min-width 45px
      background $light-blue
      overflow hidden
      border-radius 50%
      display flex
      justify-content center
      align-items center
      color $color-white
      margin-bottom 20px
      +md()
        margin-bottom 0
    &text
      font-size 18px
      font-weight 400
      color $purple-light
      line-height 30px
      text-align center
      +md()
        text-align left
    &link
      color $purple-light
      &:hover
        text-decoration underline


.contact-section
  overflow hidden
  border-radius 5px
  +lg()
    display flex
  &__
    &contact-form
      width 100%
      box-sizing border-box
      background $light-blue
      padding 15px
      +lg()
        min-width 500px
        padding 30px
        width 500px
    &map
      width 100%
      height 300px
      +lg()
        height auto
      iframe
        height 100% !important
        width 100% !important
