.author-intro
  display flex
  flex-direction column-reverse
  padding 20px 10px
  color $purple-light
  +md()
    border-radius 5px
    flex-direction row
  +lg()
    padding 35px 30px
  
  &__
    &photo
      width 155px
      height 155px
      object-fit cover
      border-radius 50%
      +md()
        width 250px
        height 250px
      +xl()
        width 430px
        height 430px
    &photo-container
      padding-bottom 10px
      +md()
        padding-bottom 0
        padding-left 40px
      +xl()
        padding-left 100px
    &title
      font-size 24px
      +lg()
        font-size 30px
    &text
      font-size 14px
      font-weight 400
      line-height 24px
      +lg()
        font-size 16px
        line-height 30px
      p 
        margin-bottom 20px

    &socials
      justify-content center
      +md()
        justify-content flex-start


.author-socials
  margin 0 -10px
  display flex
  &__
    &item
      margin 0 10px
      width 40px
      height 40px
      border-radius 50%
      display flex
      align-items center
      justify-content center
      color $color-white
      transition 0.3s
      font-size 20px
      &--
        &linkedin
          border 2px solid $color-linkedin
          background $color-linkedin
          &:hover
            color $color-linkedin
        &twitter
          border 2px solid $color-twitter
          background $color-twitter
          &:hover
            color $color-twitter
        &mail
          border 2px solid $color-mail
          background $color-mail
          &:hover
            color $color-mail
      &:hover
        background inherit


.author-info
  border-radius 5px
  display flex
  overflow hidden
  flex-direction column
  +md()
    flex-direction row
  &__
    &col
      padding 20px 10px
      +lg()
        padding 35px 30px
      &--
        &one
          +md()
            width 40%
        &two
          +md()
            width 60%
    &item
      margin-bottom 20px
      &:last-child
        margin-bottom 0
    &item-title
      color $color-white
      font-size 18px
      font-weight 700
      line-height 24px
      text-transform uppercase
    &item-text
      display block
      font-size 14px
      font-weight 400
      color $color-white
      line-height 24px
      &--
        &link
          margin-top 20px
          text-decoration underline
          transition 0.3s
          &:hover
            text-decoration none