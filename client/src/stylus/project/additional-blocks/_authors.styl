.author-card
  box-shadow 0 0 15px rgba(0, 0, 0, 0.12)
  border-radius 5px
  background-color $color-white
  width 100%
  &__
    &header
      padding 20px
      display flex
      flex-direction column
      align-items center
    &body
      padding 20px 25px
      background-color $grey-4
    &photo
      width 126px
      height 126px
      border 5px solid #f4f4f4
      border-radius 50%
      overflow hidden
      object-fit cover
      object-position center
    &label
      margin 10px 0
      color $grey-3
      font-size 16px
      font-weight 400
    &name
      color $light-blue
      font-size 24px
      font-weight 700
      line-height 24px
      margin-bottom 20px
      &:hover
        text-decoration underline
    &short_description
      color $purple-light
      font-size 15px
      font-weight 400