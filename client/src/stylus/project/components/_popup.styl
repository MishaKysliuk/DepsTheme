.popup
  height 100vh
  width 100%
  position fixed
  top 0
  left 0
  background-color: rgba(#000, .45)
  z-index 99
  display none

  iframe
    display block
    width 100%
    height 200px
    +md()
      height 350px
    +lg()
      height 450px
    

  &__overflower
    position absolute
    left 0
    top 0
    width 100%
    height 100%

  &__content
    position absolute
    transform translate(-50%, -50%)
    top 50%
    left 50%
    width 85%
    height auto
    background: #ffffff
    z-index 3
    +md()
      width 50%
    +lg()
      width 450px
    +xl()
      width 550px


.popup-inner
  color #000
  position relative
  width 100%
  height 100%
  &__close-popup
    position absolute
    right 15px
    top 0px
    font-size 3rem
    color #333b80
    &:hover
      cursor pointer
    &:hover,
    &:focus
      color lighten(#333b80, 45%)
    span
      font-size 35px
  &__text-content
    text-align center
  &__form-content,
  &__text-content
    padding 25px
    padding: 25px
    height auto
    max-height: 70vh
    overflow-y: auto
  &__title
    font-weight 700
    color #132968
    font-size 1.6rem
    +md()
      font-size 2rem
    +xl()
      font-size 2.5rem
  &__subtitle
    color #0079bf
    margin-top 22px
    font-size 1.4rem
    font-weight 500
    +md()
      font-size 1.6rem
    +xl()
      font-size 2rem

