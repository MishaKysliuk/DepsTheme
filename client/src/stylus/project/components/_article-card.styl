.custom-row-flex
  &.all-articles
    margin-top 15px

.article-card
  padding 10px
  width 100%
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.05)
  border-radius 5px
  background-color: $color-white
  position relative
  display flex
  flex-direction column
  justify-content space-between
  +md()
    padding 20px
  &__
    &header
      height 170px
      min-height 170px
      overflow hidden
      border-radius 5px
      background $purple-dark-2
    +md()
      height 210px
      min-height 210px
    &image
      width 100%
      height 100%
      object-fit cover
      object-position center
      display block
      transition 0.3s
    &body
      padding 20px 0
      height 100%
      display flex
      align-items flex-start
    &title
      color $purple-light
      font-size 18px
      font-weight 700
      line-height 24px
      transition 0.3s
      &:hover
        text-decoration underline
    &icon
      margin-right 10px
      font-size 20px
    &footer
      z-index 2
      +md()
        display flex
        margin 0 -10px
    &footer-el
      color $purple-2
      font-size 14px
      font-weight 400
      margin 10px 0
      display: flex
      align-items: center
      +md()
        margin 0 10px
    &link
      position absolute
      left 0
      top 0
      height 100%
      width 100%
      z-index 1
    &author
      color $purple-2
      &:hover
        text-decoration underline
