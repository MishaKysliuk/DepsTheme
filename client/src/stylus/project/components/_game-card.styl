.game-cards-list
  &__item
    &:not(:last-child)
      margin-bottom 10px

.one-game
  display flex
  flex-direction column
  position relative
  +lg()
    align-items center
  &--
    &quiz
      position relative
      border-radius 5px;
      background-color #fff
      box-shadow 0 0 15px rgba(0, 0, 0, 0.12)
      padding 15px
      +lg()
        flex-direction row
  form
    text-align center
    width 100%
    button
      &:hover
        cursor pointer
      &:not(.main-btn)
        border 0
        background-color: transparent
  &__row
    display flex
    justify-content space-around
    +lg()
      justify-content space-between
    &--column
      flex-direction: column
      align-items center
    &--lg-jc-end
      +lg()
        justify-content flex-end
    &--btn-side
      width 160px
      +xl()
        width 220px
  &__el
    &:not(:last-child)
      margin-bottom 10px
      +lg()
        margin-bottom 0
    &--lg-w45
      +lg()
        width 45%
        margin-left: 20px
    &--lg-w30
      +lg()
        width 30%
    &--lg-w25
      +lg()
        width 25%
    &-logo
      width 100px
    &-price-inner,
    &-list
      display flex
    &-price-inner
      justify-content center
      width 40%
      +lg()
        width 55%
    &-list
      justify-content center
      width 60%
      +lg()
        justify-content flex-start
        width 45%
  &__stars
    margin-top 10px
    position relative
    text-align center
    height: 42px
    .star-rating-caption
      font-size 1.4rem !important
      font-weight 400
      text-align center
      color $purple-light
    .pos-absolute
      position absolute
      transform: translateX(-50%)
      left 50%
      width 180%
  &__light
    font-size 1.2rem
    font-weight 400
    color $purple-light
    +lg()
      font-size 1.4rem
  &__price
    font-weight 700
    color $purple-light
    font-size 1.6rem
    +sm()
      font-size 2.4rem
    +lg()
      font-size 3rem
  &__link,
  &__title
    color $light-blue
    text-decoration underline
  &__title
    font-weight 500
    font-size 1.6rem
    +lg()
      font-size 2rem
  &__link
    font-size 1.2rem
    font-weight 400
    margin-top 5px
    word-break: break-word
    +lg()
      font-size 1.5rem

  &--
    &table
      tbody
        width 100%
      .one-game
        &__
          &table-col
            border 0
            padding 0
            background-color initial !important
            width 50%
            +md()
              width auto
            &--
              &w1
                width 50%
                +md()
                  width auto
                +xl()
                  width 100px
              &w2
                width 50%
                +md()
                  width auto
                +xl()
                  width 200px
              &w3
                width 50%
                +md()
                  width auto
                +xl()
                  width 220px
              &btn
                width 100%
                display flex
                align-items center
                justify-content center
                padding 15px 0
                +md()
                  width 100%
                +xl()
                  width auto
          &table-row
            width 100%
            display flex
            align-items center
            justify-content center
            flex-wrap wrap
            border-radius 5px
            background-color $color-white
            box-shadow 0 0 15px rgba(0, 0, 0, 0.12)
            padding 15px 20px
            margin-bottom 10px
            +md()
              justify-content space-between
      thead
        display none
        +md()
          display flex
          width 100%
        .one-game
          &__
            &table-row
              background-color #f0f0f0 !important
              margin-bottom 25px
            &table-col
              font-size 18px
              font-weight 500
              line-height 24px
              text-align center
              text-transform uppercase
              color $purple-light


.casino-logo
  position relative
  display flex
  width 100px
  height 100px
  border-radius 50%
  border 5px solid #fafafa
  margin 0 auto
  &__link
    position absolute
    width 100%
    height 100%
    left 0
    top 0
  &__img
    margin: auto
    width 70%
    height 70%
  &__counter-wrapper
    position absolute
    background-color $main-green
    border: 4px solid #fafafa
    border-radius 50%
    width 34px
    height 34px
    display inline-flex
    top -8px
    left -8px
  &__counter
    font-size 2rem
    font-weight 700
    color $color-white
    margin: auto

.marks-list
  &__item
    position relative
    padding-left 25px
    font-size 1.2rem
    font-weight: 400
    color $purple-light
    list-style none !important
    text-align left
    &:not(:last-child)
      margin-bottom 5px
    +sm()
      font-size 1.4rem
    +lg()
      font-size 1.6rem
    &:before
      content: '\EA0A'
      font-family: "svgfont"
      color $light-blue
      position absolute
      transform: translateY(-50%)
      top 50%
      left 0
