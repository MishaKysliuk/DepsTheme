.search-form
  position relative
  width 40px
  height 40px
  z-index 1
  +xl()
    width 52px
    height 52px
  ::placeholder
    color transparent
    text-transform uppercase
    font-size 14px
    font-weight 300
  &__input
    border 1px solid transparent
    width 100%
    height 100%
    display block
    background-color #111448
    border-radius 50%
    color $color-white
    font-size 14px
    font-weight 400
    &:focus
      box-shadow: 0px 0px 20px 2px $light-blue
      outline 0
    &.active
      border 1px solid $light-blue
      border-top-left-radius: 20px
      border-bottom-left-radius: 20px
      border-top-right-radius: 0
      border-bottom-right-radius: 0
      padding-left 60px
      padding-right 30px
      +xl()
        border-top-left-radius: 0
        border-bottom-left-radius: 0
        border-top-right-radius: 20px
        border-bottom-right-radius: 20px
      &::placeholder
        color $light-blue
  &__input-inner
    position absolute
    top 0
    width 100%
    height 100%
    will-change: transform
    +xl()
      transform: translateX(-100%)
      left 52px
    &.active
      width 255px
      +xl()
        width 1000px
      .search-form__search-btn
        color $light-blue
  &__loader
    height 100%
    width 50px
    position absolute
    right 35px
    transform: translateY(-50%)
    top 50%
  &__clear
    border: 0
    color $color-white
    background-color: transparent
    position absolute
    transform: translateY(-50%)
    top 50%
    right 15px
    display none
    &.visible
      display block
  &__search-btn
    color $color-white
    display inline-flex
    font-size 18px
    position absolute
    transform: translateY(-50%)
    left 0px
    top 50%
    border-radius 50%
    border: 0
    background-color transparent
    width 40px
    height 40px
    z-index 2
    &:focus
      border 3px solid $light-blue
    span
      margin: auto
      +xl()
        font-size 22px
    +xl()
      width 52px
      height 52px
  &__search-btn,
  &__clear
    +xl()
      &:hover
        cursor pointer
  &__results
    max-height: 250px
    overflow: auto
    position absolute
    width 100%
    top 40px
    left 0
    z-index -1


.list-search
  &__item
    background-color $purple-light
    padding 10px
    border 2px solid transparent
    &:focus
      outline: none
    &:focus-within
      border-color $color-white
    &:nth-child(1)
      padding-top 20px
  &__empty,
  &__link
    color $color-white
    font-size 1.4rem
    font-weight 500
  &__link
    &:hover,
    &:focus
      text-decoration underline