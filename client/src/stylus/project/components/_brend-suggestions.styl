.brend-suggestions
  padding 10px 20px
  width 100%
  &--
    &pros
      background $green-opacity
      border-left 2px solid $main-green
      .brend-suggestions
        &__
          &title
            color $main-green
            &:before
              color $main-green
          &item
            &:before
              color $main-green
              content: $icon-pluse
    &cons
      background $red-opacity
      border-left 2px solid $main-red
      .brend-suggestions
        &__
          &title
            color $main-red
            &:before
              color $main-red
              transform scale(1, -1)
          &item
            &:before
              color $main-red
              content: $icon-minus
  &__
    &title
      font-size 18px
      font-weight 500
      line-height 24px
      padding-left 30px
      position relative
      &:before
        @extend $icon
        display inline-block
        content $icon-like
        position absolute
        left 0
        top 0
        font-size 24px

    &item
      margin-top 20px
      padding-left 25px
      position relative
      font-size 14px
      font-weight 400
      line-height 18px
      &:before
        @extend $icon
        display inline-block
        content $icon-like
        position absolute
        left 0
        top 4px
