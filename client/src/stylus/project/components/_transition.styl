$transitionTime = .4s

.slide-left-enter
  opacity 0

.slide-left-enter-active
  animation slide-in $transitionTime linear forwards
  transition opacity $transitionTime

.slide-left-leave-active
  animation slide-out $transitionTime linear forwards
  position absolute

.slide-left-move
  transition transform $transitionTime linear

@keyframes slide-in
  from
    transform translateX(-100%)
  to
    transform translateX(0)

@keyframes slide-out
  from
    transform translateX(0)
    opacity 1
  to
    transform translateX(100%)
    opacity 0


.slide-right-enter
  opacity 0

.slide-right-enter-active
  animation slide-in-right $transitionTime linear forwards
  transition opacity $transitionTime

.slide-right-leave-active
  animation slide-out-right $transitionTime linear forwards
  position absolute

.slide-right-move
  transition transform $transitionTime linear

@keyframes slide-in-right
  from
    transform translateX(100%)
  to
    transform translateX(0)

@keyframes slide-out-right
  from
    transform translateX(0)
    opacity 1
  to
    transform translateX(-100%)
    opacity 0


.menuTransitionWrapper
  overflow hidden

