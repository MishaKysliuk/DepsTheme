.tooltip
  position relative
  text-align center
  &__
    &open-btn
      color $light-blue
      font-size 12px
      font-weight 400
      cursor pointer
      transition: 0.3s
      border-bottom: 1px dashed $light-blue
      &:hover
        border-bottom: 1px solid $light-blue
    &close
      width 9px
      height 9px
      color $grey-3
      top 5px
      right 8px
      position absolute
      cursor pointer
      transition 0.3s
      &:hover
        color $light-blue
    &title
      font-size 14px !important
      font-weight 500
    &container
      display none
      padding 15px 10px 
      position absolute
      left calc(50% - 110px)
      margin-top 10px
      z-index 9
      width 220px
      box-shadow 0 0 12px rgba(0, 0, 0, 0.07)
      border-radius 5px
      border 1px solid #efe3a7
      background-color $tooltip-color
      color $main-gray 
      font-size 11px
      font-weight 400
      &::before
        content ''
        position absolute
        left calc( 50% - 10px )
        top -19px
        border 10px solid transparent
        border-bottom 10px solid $tooltip-color
    &text
      margin 10px 0