.form
  display flex
  flex-wrap: wrap
  justify-content space-between
  width 100%
  ::placeholder
    font-weight 400
    font-size 1.7rem
    color #adb0b1
  &__group
    width 100%
    position relative
    margin: 10px 0
    &--lg-w70
      +lg()
        width calc(70% - 10px)
    &--lg-w30
      +lg()
        width calc(30% - 10px)
  &__input
    display block
    width 100%
    height 100%
    background-color #fff
    padding 20px 20px 20px 60px
    border-radius 5px
    border 0
    color #132968
    font-size 1.8rem
    border 2px solid transparent
    &.is-invalid
      border-color #d61717
  &__img
    position absolute
    transform: translateY(-50%)
    top 50%
    left 20px
    color #adb0b1
    font-size 24px
  &__error-text
    position absolute
    left 0
    bottom -20px
    color #fff
    font-weight 500