.how-to-section
  width 100%
  background $light-blue

.steps-text
  color $color-white
  font-size 16px
  font-weight 400
  line-height 1.4
  a 
    text-decoration underline
    color $yellow
    &:hover
      text-decoration none

.steps-header
  box-shadow 0 0 15px rgba(0, 0, 0, 0.12)
  border-radius 5px
  background-color $light-blue-4
  display flex
  justify-content center
  flex-direction column
  +md()
    flex-direction row
  &__
    &item
      font-size 18px
      font-weight 400
      color $color-white
      margin 10px 15px
      +md()
        margin 16px 15px
      +lg()
        margin 16px 35px
      span 
        font-weight 500

.step_card
  border-radius 5px
  background-color $color-white
  padding 10px
  width 100%
  height 100%
  position relative
  display flex
  flex-direction column
  &__
    &index
      width 140px
      height 40px
      border-radius 0 0 5px 5px
      background-color $main-green
      position absolute
      top 0
      left calc(50% - 70px)
      display flex
      align-items center
      justify-content center
      color $color-white
      font-size 18px
      font-weight 700
    &photo
      height 200px
      width 100%
      object-fit cover
      object-position center
      border-radius 5px
    &body
      height 100%
      display flex
      flex-direction column
      justify-content space-between
      align-items center
      padding 15px 0
    &title
      color $purple-light
      font-size 18px
      font-weight 700
      line-height 24px
      margin-bottom 15px
    &text
      color $purple-light
      font-size: 14px
      font-weight: 400
      line-height: 24px
