table
  border-collapse: collapse
  font-weight 500
  font-size 1.5rem
  text-align center
  margin: 10px auto
  width: 100%
  tr:nth-child(1)
    td, th
      background-color $light-blue
      color #fff
    .noLink
      color $color-white
  th, td
    padding 10px 15px
    border 2px solid #ccc
  th
    background-color $light-blue
  td
    background-color #fff
