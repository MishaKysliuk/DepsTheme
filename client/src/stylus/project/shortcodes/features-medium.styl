.features-medium
  &__
    &row
      display flex
      justify-content center
      flex-wrap wrap
      flex-direction column
      +md()
        margin 0 -20px
        flex-direction row
    &el
      width 100%
      border-radius 5px
      background-color $color-white
      color $color-white
      display flex
      align-items center
      padding 15px
      margin 10px 0
      +md()
        width calc(50% - 30px)
        margin 15px
      +lg()
        padding 20px 30px
        width calc(33% - 30px)
    &icon
      font-size 60px
      margin-right 30px
    &image
      width 60px
    &title
      font-size 24px
      font-weight 700
      margin-bottom 14px
      text-transform uppercase
      a 
        text-decoration underline
        color inherit
        &:hover
          text-decoration none
    &text
      font-size 16px
      font-weight 400
      color $color-white !important