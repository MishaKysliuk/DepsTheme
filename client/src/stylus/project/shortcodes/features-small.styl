.features-small
  &__
    &title-line
      border-radius 5px
      background-color $main-green
      padding 10px 10px
    &title-white
      color $color-white !important
      margin 0 !important
      a
        text-decoration underline
        color $color-white
        &:hover
          text-decoration none

    &row
      display flex
      justify-content center
      flex-wrap wrap
      flex-direction column
      +md()
        margin 0 -20px
        flex-direction row
    &el
      width 100%
      height 100px
      box-shadow 0 5px 5px rgba(0, 0, 0, 0.05)
      border-radius 5px
      background-color $color-white
      display flex
      align-items center
      padding 15px
      margin 10px 0
      +md()
        width calc(50% - 30px)
        margin 15px
      +lg()
        padding 30px
        width calc(33% - 30px)
    &icon
      font-size 40px
      margin-right 30px
    &image
      width 40px
    &title
      color $purple-light
      font-size 18px
      font-weight 700
      margin 0 !important
      a
        text-decoration underline
        color $purple-light
        font-size 18px
        font-weight 700
        &:hover
          text-decoration none
