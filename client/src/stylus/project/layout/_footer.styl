.footer
  background-color $footer-dark-color

.footer-logo-text
  &__img
    width 130px
    height 50px
    float left
    margin-right 15px
    +xl()
      width 170px
      height 70px

.footer-nav
  width 100%
  &__title,
  &__link
    color $color-white
  &__title
    font-size 1.8rem
    font-weight 500
    margin-bottom 15px
    border-bottom 2px solid #282934
    padding-bottom 10px
  &__item
    margin 5px 0
    &--
      &second-menu
        margin 5px 10px
  &__link
    font-weight 400
    font-size 1.4rem
    +lg()
      &:hover,
      &:focus
        text-decoration underline
    +xl()
      font-size 1.6rem
  &__list
    width 100%
    justify-content center
    +xl()
      justify-content flex-end


.footer-text
  margin-top 30px

.footer-adds
  flex-direction: column
  justify-content space-between
  margin 0 20px
  +xl()
    margin 0


.footer-bottom-section
  padding 20px 0
  border-top 1px solid #282934

.footer-top-section
  padding 20px 0


.footer-logo-block
  &__
    &title
      color $grey
      font-size 18px
      font-weight 500
      text-transform uppercase
      margin-bottom 10px
    &items
      display flex
      flex-wrap wrap
      margin 0 -12px
    &item
      width 50%
      max-height 90px
      padding 12px
      position relative
      &--
        &bg
          box-shadow 0 0 15px rgba(0, 0, 0, 0.2)
          border-radius 5px
          background-color $purple-dark-3
          width calc( 50% - 20px )
          height 50px
          margin 10px
          .footer-logo-block
            &__
              &logo
                object-fit scale-down
                object-position center
    &logo
      display block
      width 100%
      height 100%
      object-fit scale-down
    &link
      display block
      height 100%
      width 100%
      transition 0.3s
      &:hover
        box-shadow 0 0 10px #fff

.footer-advice
  +xl-till()
    order 1

.footer-media
  +xl-till()
    order 2

.copyrigth
  +xl-till()
    order 1
