.header
  background-color $purple-dark
  border-bottom 2px solid #0f124b
  display flex
  align-items center
  height 64px
  +xl()
    height 88px

.header-row
  display flex
  justify-content space-between
  align-items center
  padding 5px 0
  +xl()
    padding 0
  &__btn
    width 40px
  &__logo
    width 65px
    +xl()
      order 1
      width 130px
      margin-right 30px
  &__menu
    display none
    +xl()
      display block
      order 2
      flex 1
  &__btn
    +xl()
      display none
  &__search
    z-index 1
    +xl()
      order 3
      width 52px
      z-index 1

