#edittag
  max-width 100%

.acf-fields.-left > .acf-field > .acf-input {
  width: calc(100% - 15px);
}

.copyListID
  cursor pointer

.admin-setting-page
  padding 20px 0

.admin-setting-table
  text-align center
  width 100%
  caption
    font-size 20px
    text-align left
    font-weight 500
  thead
    font-weight 500
  td
    padding 5px
  &__
    &input
      width 100%
    &save
      color #fff
      background #5aac44
      outline 0
      border 0
      border-radius 3px
      padding 5px 10px
      cursor pointer
      margin-top: 32px
      margin-left: 32px
      &:disabled
        background #ccc
        color rgba(44,51,56,.5)
        cursor not-allowed

.acf-relationship 
  & .list
    max-height 550px
    height auto !important

  
.shortcode-admin-popup
  display none
  background #00000078
  width calc(100% - 160px)
  padding-left 160px
  height 100%
  position fixed
  z-index 1
  left 0
  top 0
  .mce-container.mce-panel.mce-floatpanel.mce-window.mce-in
    margin 200px auto 0 auto
  .mce-window 
    .mce-window-head
      position relative
      button
        position absolute
        .mce-ico.mce-i-remove
          position absolute
  .mce-button-group
    text-align right
    button
      height 32px
      margin 0 5px
      background #eee
      border 1px #ccc
      padding 0 10px
      border-radius 7px
      cursor pointer
      &:hover 
        background #ccc

